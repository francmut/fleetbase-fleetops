<span class="custom-meta-field" {{did-insert this.setupComponent}} ...attributes>
    {{#if this.isTextDisplay}}
        {{@value}}
    {{/if}}

    {{#if this.isBooleanInput}}
        <Badge @status={{if @metaField.value "success" ""}}>{{if @metaField.value "Yes" "No"}}</Badge>
    {{/if}}

    {{yield}}
</span>